{
  "name": "Flags",
  "type": "flags",
  "values": [
    {
      "name": "exchange",
      "type": "std::string",
      "required": true,
      "default": "deribit",
      "description": "exchange"
    },
    {
      "name": "symbol",
      "type": "std::string",
      "required": true,
      "default": "BTC-PERPETUAL",
      "description": "symbol (regex)"
    },
    {
      "name": "account",
      "type": "std::string",
      "required": true,
      "default": "A1",
      "description": "account (regex)"
    },
    {
      "name": "currencies",
      "type": "std::string",
      "default": "BTC|USD",
      "description": "currencies (regex)"
    },
    {
      "name": "sample_freq",
      "type": "std::chrono::nanoseconds",
      "validator": "roq::flags::validators::TimePeriod",
      "required": true,
      "default": "1000ms",
      "description": "sample frequency"
    },
    {
      "name": "ema_alpha",
      "type": "double",
      "required": true,
      "default": 0.33,
      "description": "alpha used to compute exponential moving average (0 < alpha <= 1)"
    },
    {
      "name": "warmup",
      "type": "uint32_t",
      "required": true,
      "default": "120",
      "description": "warmup (number of samples before a signal is generated)"
    },
    {
      "name": "enable_trading",
      "type": "bool",
      "default": false,
      "description": "trading must explicitly be enabled!"
    },
    {
      "name": "simulation",
      "type": "bool",
      "default": false,
      "description": "requires an event-log"
    },
    {
      "name": "allow_price_inversion",
      "type": "bool",
      "default": false,
      "description": "allow price-inversion?"
    }
  ]
}

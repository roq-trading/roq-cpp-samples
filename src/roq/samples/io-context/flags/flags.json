    },
    {
      "name": "ws_listen_address",
      "type": "std::string",
      "validator": "roq::flags::validators::ListenAddress",
      "required": true,
      "default": 1234,
      "description": "port"
    },
    {
      "name": "udp_listen_address",
      "type": "std::string",
      "validator": "roq::flags::validators::ListenAddress",
      "required": true,
      "default": 2345,
      "description": "port"
    },
    {
      "name": "filter_symbols",
      "type": "bool",
      "default": false,
      "description": "set to true to enable ws managed subscribe/unsubscribe"
    }
  ]
}
